<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.api.ap.sample.domain.repository.SampleRepository">
    <select id="selectById" resultType="com.example.api.db.entity.Sample">
        SELECT
            seq,
            id,
            number,
            string,
            created_at,
            updated_at
        FROM
            samples
        WHERE
            id = #{id}
    </select>
    <select id="selectAll" resultType="com.example.api.db.entity.Sample">
        SELECT
            seq,
            id,
            number,
            string,
            created_at,
            updated_at
        FROM
            samples
    </select>
</mapper>